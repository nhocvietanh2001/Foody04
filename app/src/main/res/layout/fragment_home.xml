<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBF6EB"
    tools:context=".Fragment.HomeFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHomeCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Hi, Viet Anh"
                android:textColor="@color/dark_green"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Order and Enjoy"
                android:textColor="@color/dark_green"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/higreen" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

      <ImageView
          android:layout_width="match_parent"
          android:background="@color/very_dark_green"
          android:layout_height="3dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to HiGreen"

        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/dark_green"
        android:textSize="20sp"
        android:layout_marginTop="10dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerslider"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle_indicator_slider"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:ci_drawable="@drawable/circleindicator_round"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
      />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/very_dark_green"
        android:layout_height="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:fontFamily="@font/alatsi"
        android:layout_marginLeft="15dp"
        android:textColor="@color/dark_green"
        android:textSize="25dp"
        android:layout_marginTop="10dp"

        />
   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_marginLeft="30dp"
       android:padding="2dp"
       android:id="@+id/rcvCate"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/very_dark_green"
        android:layout_height="3dp"/>



</LinearLayout>