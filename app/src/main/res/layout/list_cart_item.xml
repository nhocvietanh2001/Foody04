<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_in_cart"
            android:layout_width="70dp"
            app:cardCornerRadius="25dp"
            android:layout_height="wrap_content"
            tools:ignore="InvalidId">
            <ImageView
                android:layout_width="70dp"
                android:src="@drawable/f1"
                android:background="@drawable/edit_text_border"
                android:scaleType="centerCrop"
                android:layout_height="70dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_toEndOf="@id/img_in_cart"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_Name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="Xá xíu chay"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="Suspicious0dp" />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:text="20000"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="Total: 100000"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnGiam"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#808880"
                    android:fontFamily="@font/alatsi"
                    android:text="-"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtSL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="@color/very_dark_green"
                    android:textSize="15dp"
                    tools:ignore="Suspicious0dp" />

                <Button
                    android:id="@+id/btnThem"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alatsi"
                    android:text="+"
                    android:textStyle="bold"
                    android:textColor="@color/very_dark_green"
                    android:textSize="15dp"
                    tools:ignore="Suspicious0dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>